@model BLL.DTO.StoreDTO

@inject BLL.Services.FilesService FS
@inject BLL.Services.GoodsService _goods

<div id="load">
    <div class="row">
        <div class="col-10 d-flex flex-column align-content-center justify-content-center bg-body shadow">
            <h1>
                @(Model.Name) Store.
            </h1><br>
            <p>
                @(Model.Description)
                @if (User.IsInRole("StoreOwner"))
                {
                    <div class="btn-group">
                        <button class="btn btn-warning" data-toggle="modal" data-target="#exampleModalCenter">
                            Show statistic
                        </button>
                        <button class="btn btn-danger" data-toggle="modal" data-target="#exampleModalCenter">
                            Add manager
                        </button>
                    </div>
                }
            </p>
        </div>
    </div>
    @await Html.PartialAsync("~/Views/Home/_ProductCards.cshtml", _goods.GetGoodsByStoreId(Model.Id) )
</div>

@if (User.IsInRole("StoreOwner"))
{
    <!-- Modal -->
    <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
      <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLongTitle">Modal title</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body" id="modalPlace">
            
          </div>
          <div class="modal-footer"> 
          </div>
        </div>
      </div>
    </div>
}