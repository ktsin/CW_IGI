<Window x:Class="DesktopAppWAPI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DesktopAppWAPI"
        mc:Ignorable="d"
        Title="Защита лабораторной работы №5" Height="450" Width="800">
    <Grid>
        <DockPanel LastChildFill="True">
            <StackPanel Width="300" MinWidth="300" VerticalAlignment="Center">
                <Label Content="Защита ЛР5" FontFamily="Segoe WP" FontSize="22" FontWeight="Bold" Padding="10, 5, 5, 50"/>
                <Button Margin="10,5" Content="Ввод IP-адреса сервера" FontFamily="Tahoma" FontSize="16" Click="SetIp_Click"/>
                <Button Margin="10, 5" Content="Получить сводку о товарах" FontFamily="Tahoma" FontSize="16" Click="ShowGoodsDetailed_Click"/>
                <Button Margin="10, 5" Content="Удаление товара по ID" FontFamily="Tahoma" FontSize="16" Click="DeleteGoodById_Click"/>
            </StackPanel>
            <Frame Content="" Width="500" MinWidth="500" x:Name="pageView"/>
        </DockPanel>

    </Grid>
</Window>
