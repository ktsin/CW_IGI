<Page x:Class="DesktopAppWAPI.Views.SetIp"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DesktopAppWAPI.Views"
      xmlns:vm="clr-namespace:DesktopAppWAPI.ViewModel"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="500"
      Title="Установка IP">
    <Page.DataContext>
        <vm:SetIpViewModel/>
    </Page.DataContext>
    <DockPanel Background="White">
        <StackPanel VerticalAlignment="Center">
            <Label Content="Введите IP адрес сервера Web API:" FontSize="22" FontFamily="Segoe WP Semibold" FontWeight="Normal" Margin="5, 5, 5, 100"/>
            <TextBox  HorizontalAlignment="Stretch" Padding="30,5,30,5" Margin="30,5,30,5" FontSize="14" FontFamily="Segoe WP" Text="{Binding IpAddress, Mode=OneWay}" />
            <Button Content="Применить!" Margin="30, 10, 30, 10" Padding="3,3,3,3" Click="{Binding ApplyIp}"/>
        </StackPanel>
    </DockPanel>

</Page>
